<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/white"/>
            <stroke
                android:width="2dp"
                android:color="@color/black"/>
            <corners
                android:radius="5dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid
                android:color="@color/white"/>
            <stroke
                android:width="2dp"
                android:color="@color/material_dynamic_neutral50"/>
            <corners
                android:radius="5dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/white"/>
            <stroke
                android:width="2dp"
                android:color="@color/material_dynamic_neutral50"/>
            <corners
                android:radius="5dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
</selector>