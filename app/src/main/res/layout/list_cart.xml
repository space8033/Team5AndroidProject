<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="399dp"
            android:layout_height="124dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="3dp">

            <CheckBox
                android:id="@+id/check_item"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:id="@+id/cart_imgFile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/photo1"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Title, secondary and supporting text -->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pay_prodcut_name"
                            android:layout_width="175dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="2"
                            android:singleLine="true"
                            android:text="맛도리 무드등"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textSize="14sp" />

                        <ImageButton
                            android:id="@+id/delete_Item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_cancel_24dp"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/pay_prodcut_option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxEms="8"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:text="맛도르 무드등의 옵션" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        >

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="6dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="수량" />

                        <ImageButton
                            android:id="@+id/qty_minus"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/ic_minus_24px"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/pay_product_qty"
                            android:layout_width="4dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1개"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/qty_plus"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/ic_plus_24px"
                            tools:ignore="SpeakableTextPresentCheck"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/pay_product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="80000"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="?android:attr/textColorSecondary" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="37dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="원" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>